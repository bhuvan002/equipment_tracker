<h1>All equipment</h1>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-hover" id="equipment-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Model</th>
                    <th>Type</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Warranty Status</th>
                    <% if is_lab_owner? %>
                        <th>New Lab Owner ID (Move request)</th>
                    <% end %>
                </tr>
            </thead>
            <tbody>
                <%= render @equipment || "No equipment found" %>
            </tbody>
        </table>
    </div>
</div>